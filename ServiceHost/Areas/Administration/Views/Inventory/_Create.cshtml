@model InventoryManagement.Application.Contracts.Inventory.CreateInventory

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	<h4 class="modal-title">ایجاد انبار جدید</h4>
</div>




<form asp-area="Administration" asp-controller="Inventory" asp-action="Create"
   method="post"
   data-ajax="true"
   data-callback=""
   data-action="Refresh"
   enctype="multipart/form-data">
	<div class="modal-body">
		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					<label asp-for="ProductId" class="control-label">گروه محصول</label>
					<select asp-for="ProductId" class="form-control" asp-items='new SelectList(Model.Products,"Id","Name")'>
						<option value="0">انتخاب محصول</option>
					</select>
					<span asp-validation-for="ProductId" class="error"></span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-group">
					<label asp-for="UnitPrice" class="control-label">قیمت واحد</label>
					<input asp-for="UnitPrice" type="text" class="form-control">
					<span asp-validation-for="UnitPrice" class="error"></span>
				</div>
			</div>

			
		</div>
		
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
		<button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
	</div>
</form>
