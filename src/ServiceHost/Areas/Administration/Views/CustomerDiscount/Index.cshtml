@{

	ViewData["title"] = "مدیریت تخفیفات مشتریان";
}
@model List<DiscountManagement.Application.Contracts.CustomerDiscount.CustomerDiscountViewModel>



<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" data-toggle="ajax-modal" href="#showmodal=@Url.Action("Create","CustomerDiscount")">تعریف تخفیف مشتری</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در تخفیفات مشتریان</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get" asp-area="Administration" asp-controller="CustomerDiscount" asp-action="Index">
                    <div class="form-group">
                        <label class="sr-only" name="name"></label>
                        <input class="form-control persianDateInput" name="startDate">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" name="code"></label>
                        <input class="form-control persianDateInput" name="endDate">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" name="categoryId"></label>
                        <select class="form-control" name="productId" asp-items="ViewBag.products">
                            <option value="0">انتخاب محصول...</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست تخفیفات مشتریان(@Model.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
	                                <th>محصول</th>
	                                <th>درصد تخفیف</th>
	                                <th>تاریخ شروع</th>
	                                <th>تاریخ پایان</th>
	                                <th>علت تخفیف</th>
	                                <th>تاریخ تولید</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Product</td>
	                                    <td>@item.DiscountRate</td>
                                        <td>@item.StartDate</td>
                                        <td>@item.EndDate</td>
                                        <td>@item.Reason</td>
	                                    <td>@item.CreationDate</td>
                                        
	                                    <td>
                                            <a class="btn btn-warning pull-right m-rl-5" href="#showmodal=@Url.Action("Edit","CustomerDiscount",new {item.Id})">
			                                    <i class="fa fa-edit"></i> ویرایش
		                                    </a>
		                                   
	                                    </td>
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}